<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offers_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offers.tree</field>
        <field name="model">estate_property_offers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offers_view_form" model="ir.ui.view">
        <field name="name">estate_property_offers.form</field>
        <field name="model">estate_property_offers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" class="oe_inline" placeholder="search"/>
                        <field name="price" class="oe_inline"/>
                        <field name="status" class="oe_inline" placeholder="optional"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>